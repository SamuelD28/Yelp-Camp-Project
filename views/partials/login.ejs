<!--Login Modal-->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div>
                <ul class="nav nav-tabs comment-nav" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#login-form" role="tab">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#register-form" role="tab">Register</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="login-form" class="tab-pane active">
                        <form action="/login" method="POST">
                            <div class="form-input">
                                <input name="username" type="text" class="form-control" placeholder="Username">
                            </div>
                            <div class="form-input">
                                <input name="password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-input">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </form>
                    </div>
                    <div id="register-form" class="tab-pane">
                        <form action="/register" method="POST">
                            <div class="form-input">
                                <input name="username" type="text" class="form-control" placeholder="Username">
                            </div>
                            <div class="form-input">
                                <input name="password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-input">
                                <input name="email" type="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-input">
                                <input name="firstname" type="text" class="form-control" placeholder="First name">
                            </div>
                            <div class="form-input">
                                <input name="lastname" type="text" class="form-control" placeholder="Last name">
                            </div>
                            <div class="form-input">
                                <button type="submit" class="btn btn-primary">Sign up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>